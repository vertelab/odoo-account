<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="mis_budget_by_account_form_view_forecast" model="ir.ui.view">
      <field name="name">mis.budget.by.account.create_forcast</field>
      <field name="model">mis.budget.by.account</field>
      <field name="inherit_id" ref="mis_builder_budget.mis_budget_by_account_form_view" />
      <field name="arch" type="xml">
        <header position="inside">
          <button name="make_account_forecast" string="Create Forecast" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}" />
        </header>
      </field>
    </record>
    <record id="view_make_account_forecast_form" model="ir.ui.view">
      <field name="name">make.account.forecast.wizard</field>
      <field name="model">make.account.forecast.wizard</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="budget_id" />
              <field name="use_account_from_year" />
              <field name="use_contract" />
              <field name="use_first_period" />
              <field name="percentage_factor" widget="percentage" attrs="{'invisible': [('use_account_from_year', '=', False)]}" />
            </group>
            <separator string="" colspan="4" style="border-top: 1px solid grey; margin-top: 10px; margin-bottom: 10px;" />
            <group>
              <field name="account_class_ids" widget="many2many_tags" options="{'no_create': True}" />
              <field name="account_ids" widget="many2many_tags" />
            </group>
            <footer>
              <button string="Create New Income Budget" type="object" class="oe_highlight" name="make_report" />
              <button string="Cancel" class="btn-secondary" special="cancel" />
            </footer>
          </sheet>
        </form>
      </field>
    </record>
    <record id="action_make_account_forecast" model="ir.actions.act_window">
      <field name="name">Create Forecast - combining actuals and calculations</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">make.account.forecast.wizard</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_make_account_forecast_form" />
      <field name="target">new</field>
    </record>
<!--
    <record id="action_open_account_forecast_wizard" model="ir.actions.server">
      <field name="name">Create Forecast</field>
      <field name="type">ir.actions.server</field>
      <field name="model_id" ref="mis_builder_budget.model_mis_budget_by_account" />
      <field name="binding_model_id" ref="mis_builder_budget.model_mis_budget_by_account" />
      <field name="state">code</field>
      <field name="code">action = env.ref('account_mis_budget.action_make_account_budget').with_context(active_id=record.id).read()[0]</field>
    </record>
-->
  </data>
</odoo>
