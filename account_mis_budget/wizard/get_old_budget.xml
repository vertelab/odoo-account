<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_get_old_budget_form" model="ir.ui.view">
            <field name="name">get.old.budget.wizard</field>
            <field name="model">get.old.budget.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="percentage_factor"/>
                        </group>
                        <footer>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                            <button string="Do something" type="object" class="oe_highlight" name="modify_budget"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_get_old_budget" model="ir.actions.act_window">
            <field name="name">Get Old Budget</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">get.old.budget.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_get_old_budget_form"/>
            <field name="target">new</field>
        </record>

        <record id="action_get_old_budget_wizard" model="ir.actions.server">
            <field name="name">Get Old Budget</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="mis_builder_budget.model_mis_budget_by_account_item"/>
            <field name="binding_model_id" ref="mis_builder_budget.model_mis_budget_by_account_item"/>
            <field name="state">code</field>
            <field name="code">
action = env.ref('account_mis_budget.action_get_old_budget').read()[0]
            </field>
        </record>

    </data>
</odoo>