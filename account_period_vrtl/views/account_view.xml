        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form.inherited.account_period</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//*[@id='header_right_group']//*[hasclass('o_td_label')]" position="before">
                    <field name="period_id" />
                </xpath>
                <xpath expr="//field[@name='country_code']" position="after">
                    <field name="invoicing_date_warning" invisible="1"/>
                </xpath>
                <xpath expr="(//button[@name='action_post'])[1]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '!=', 'entry'), ('invoicing_date_warning', '=', True)]}</attribute>
                </xpath>
                <xpath expr="(//button[@name='action_post'])[2]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('invoicing_date_warning', '=', True)]}</attribute>
                </xpath>
                <!-- <xpath expr="(//button[@name='action_post'])[1]" position="after">
                 <button name="action_post" string="Post" class="oe_highlight"
                 type="object" groups="account.group_account_invoice" confirm="The date is outside the period date. Do you want to still want post the invoice?"
                 attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '!=', 'entry'), ('invoicing_date_warning', '=', False)]}"/>
               </xpath> -->
                <xpath expr="(//button[@name='action_post'])[2]" position="after">
                    <button name="action_post" string="Post" class="oe_highlight"
                            type="object" groups="account.group_account_invoice" confirm="The date is outside the period date. Do you want to still want post the invoice?"
                            attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '!=', 'entry'), ('invoicing_date_warning', '=', False)]}"/>
                    <button name="action_post" string="Confirm" class="oe_highlight"
                            type="object" groups="account.group_account_invoice" confirm="The date is outside the period date. Do you want to still want post the invoice?"
                            attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('invoicing_date_warning', '=', False)]}"/>
                </xpath>
                <!--
                        <field name="ref" position="after">
                          <field name="payment_state"/>
                        </field>
                -->
                <field name="payment_reference" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <notebook position="inside">
                    <page id="payment_done_tab" string="Payment" attrs="{'invisible': [('payment_state', '!=', 'paid')]}">
                        <group id="payment_done_group" col="1">
                            <field name="payment_period_id"/>
                            <field name="payment_state"/>
                            <field name="payment_date"/>
                            <field name="payment_move_id"/>
                            <field name="payment_reference" readonly="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
