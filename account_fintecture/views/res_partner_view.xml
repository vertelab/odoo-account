<odoo>
    <data>
        <record id="res_partner_form_view_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                
                <field name="vat" position="after">
                    <field name="is_fintecture_api"  />
                </field >

                <xpath expr="//notebook" postion="inside">
                    <page string="Fintecture" name="fintecture_settings"  attrs="{'invisible': [('is_fintecture_api','!=', True)]}">
                        <group>
                            <group>
                                <field name="fintecture_app_id" />
                                <field name="fintecture_app_secret" class="oe_edit_only" />
                                <field name="fintecture_base_url"/>
                                <field name="fintecture_redirect_url"/>
                                <field name="fintecture_private_key" class="oe_edit_only" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>