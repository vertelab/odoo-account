<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="mis_budget_by_analytic_account_item_search_view">
        <field name="name">mis.budget.by.analytic.account.item.search (in mis_builder_budget)</field>
        <field name="model">mis.budget.by.analytic.account.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="analytic_account_id" />
                <field name="date_from" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="mis_budget_by_analytic_account_item_form_view">
        <field name="name">mis.budget.by.analytic.account.item.form (in mis_builder_budget)</field>
        <field name="model">mis.budget.by.analytic.account.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="budget_id" invisible="1" />
                            <field name="budget_date_from" invisible="1" />
                            <field name="budget_date_to" invisible="1" />
                            <field name="name" />
                            <field name="analytic_account_id" />
                            <field name="partner_id" />
                            <field name="employee_id" />
                            <field name="date_range_id" />
                            <field name="date_from" />
                        </group>
                        <group>
                            <field name="date_to" />
                            <field name="debit" />
                            <field name="credit" />
                            <field name="actual_amount" />
                            <field name="balance" />
                            <field name="state" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="mis_budget_by_analytic_account_item_tree_view">
        <field name="name">mis.budget.by.analytic.account.item.tree (in mis_builder_budget)</field>
        <field name="model">mis.budget.by.analytic.account.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="budget_id" invisible="1" />
                <field name="budget_date_from" invisible="1" />
                <field name="budget_date_to" invisible="1" />
                <field name="name" />
                <field name="analytic_account_id" />
                <field name="partner_id" />
                <field name="employee_id" />
                <field name="date_range_id" />
                <field name="date_from" />
                <field name="date_to" />
                <field name="debit" />
                <field name="credit" />
                <field name="actual_amount" />
                <field name="balance" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mis_budget_by_analytic_account_item_act_window">
        <field name="name">MIS Budget Items (by analytic accounts)</field>
        <field name="res_model">mis.budget.by.analytic.account.item</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('budget_id', '=', active_id)]</field>
        <field name="context">{'default_budget_id': active_id}</field>
    </record>
</odoo>
