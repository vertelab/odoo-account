<odoo>
    <data>
        <record id="view_saltedge_wizard_form" model="ir.ui.view">
            <field name="name">saltedge.wizard.form</field>
            <field name="model">saltedge.wizard</field>
            <field name="arch" type="xml">
                <form create="0" edit="1" delete="0">
                    <header>
                        <button string="Sync Accounts" class="oe_highlight" type="object" name="sync_accounts"/>
                    </header>
                    <sheet>
                        <field name="code"/>
                        <group>
                            <group>
                                <field name="bank_id" required="1"/>
                                <field name="date_from" required="1"/>
                            </group>
                            <group>
                                <field name="session_id" invisible="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>