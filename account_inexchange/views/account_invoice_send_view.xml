<odoo>
    <record id="account_invoice_send_inherit_account_wizard_form_inexchange" model="ir.ui.view" >
        <field name="name">account.invoice.send.form.inherited.inexchange</field>
        <field name="model">account.invoice.send</field>
        <field name="inherit_id" ref="account.account_invoice_send_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='option_email']" position="replace">
                <field name="is_email" invisible="1" />
                <div name="option_inexchange">
                    <field name="is_inexchange" />
                    <b><label for="is_inexchange"/></b>
                </div>
            </xpath>
