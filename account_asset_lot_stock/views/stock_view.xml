<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_lot_form_inherit" model="ir.ui.view">
            <field name="name">stock_lot_form_inherit</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form" />
            <field name="arch" type="xml">
                   <field name="ref" position="after">
                          <field name="asset_profile_id"/>
                          <field name="asset_id"/>
                   </field>
            </field>
        </record>
        
        
        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock_picking_form_inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="lot_ids" position="before">
                    <field name="asset_profile_id" optional="show"/>
                </field>
                  <button name="action_see_returns" type="object" class="oe_stat_button" icon="fa-rotate-left" invisible="return_count == 0" position="after">
                      <field name="asset_count" invisible="True"/>
                      <button name="action_view_assets" type="object" class="oe_stat_button" icon="fa-cubes" invisible="asset_count == 0">
                            <field string="Assets" name="asset_count" widget="statinfo"/>
                        </button>
                  </button>
            </field>
        </record>
        
        
        <record id="product_product_template_form_view_extend" model="ir.ui.view">
            <field name="name">product_product_template_form_view_extend</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="asset_profile_id"/>
                </field>
            </field>
        </record>
        
        
        <record id="stock_location_form_extend" model="ir.ui.view">
            <field name="name">stock_location_form_extend</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form" />
            <field name="arch" type="xml">
                <field name="scrap_location" position="before">
                    <field name="res_partner_id"/>
                </field>
            </field>
        </record>
        
    </data>
</odoo>
