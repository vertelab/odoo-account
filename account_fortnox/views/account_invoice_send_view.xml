<odoo>
    <record id="account_invoice_send_inherit_account_wizard_form_fortnox" model="ir.ui.view" >
        <field name="name">account.invoice.send.form.inherited.fortnox</field>
        <field name="model">account.invoice.send</field>
        <field name="inherit_id" ref="account.account_invoice_send_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='option_email']" position="replace">
                <field name="is_email" invisible="1" />
                <div name="option_fortnox">
                    <field name="is_fortnox" />
                    <b><label for="is_fortnox"/></b>
                </div>
            </xpath>
            <label for="is_print" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </label>
            <field name="is_print" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <label for="snailmail_is_letter" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </label>
            <field name="snailmail_is_letter" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <footer>
<!--
                <button string="Send "
                    attrs="{'invisible': [('is_fortnox', '=', False)]}"
                    name="send_and_print_action" type="object" class="send_and_print btn-primary o_mail_send"/>
-->
                <button string="Send" name="send_and_print_action" type="object" class="send_and_print btn-primary o_mail_send"/>
            </footer>
        </field>
    </record>

    <record id="account_invoice_form_inherit" model="ir.ui.view" >
        <field name="name">account_invoice_form_inherit_fortnox</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
			<xpath expr="//button[@id='account_invoice_payment_btn']" position="before">
				<button class="oe_highlight" string="Send To Fortnox" type="object" name="sync_fortnox" attrs="{'invisible': ['|','|',('move_type', '!=', 'out_invoice'),('state','!=', 'posted'),('is_sent_to_fortnox','=',True)]}"/>
				<button string="Send To Fortnox" type="object" name="sync_fortnox" attrs="{'invisible': ['|','|',('move_type', '!=', 'out_invoice'),('state','!=', 'posted'),('is_sent_to_fortnox','=',False)]}"/>
			</xpath>
			 <!--<button name="action_invoice_sent" type="object" string="Send &amp; Print" attrs="{'invisible':['|', '|', ('state', '!=', 'posted'), ('is_move_sent', '=', True), ('move_type', 'not in', ('out_invoice', 'out_refund'))]}" class="oe_highlight" data-hotkey="y" postion="after">
				<button string="Send To Fortnox" name="sync_fortnox"/>
			</button>-->
            <field name="partner_bank_id" position="after">
                <field name="is_sent_to_fortnox" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
            </field>
            <notebook position="inside">
				<page id="fortnox_tab" name="fortnox_tab" string="Fortnox Info" attrs="{'invisible': ['|',('move_type', '!=', 'out_invoice'),('is_sent_to_fortnox','!=', True)]}">
					<group>
					  <field name="fortnox_response"/>
                      <field name="fortnox_status"/>
                     </group>
				</page>
			</notebook>
        </field>
    </record>
    
</odoo>
