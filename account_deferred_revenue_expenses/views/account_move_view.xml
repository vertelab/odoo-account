<odoo>
    <data>
        <record model="ir.ui.view" id="view_move_form_extended">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account_asset_management.view_move_form"/>
            <field name="arch" type="xml">
                <field name="asset_profile_id" position="before">
                    <field name="deferred_expense_profile_id" domain="[('rec_type', '=', 'deferred_expense' )]"/>
                </field>

                <field name="asset_profile_id" position="replace">
                    <field name="asset_profile_id"
                           attrs="{'column_invisible': [('parent.move_type', 'not in', ('in_invoice', 'in_refund'))]}"
                           optional="show"
                           groups="account.group_account_invoice"
                           domain="[('rec_type', '=', 'asset' )]"
                    />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="account_view_move_form_extended">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="button_view_deferred_expenses" type="object" class="oe_stat_button" icon="fa-bars">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Deferred Expenses</span>
                        </div>
                    </button>

                    <button name="button_view_assets" type="object" class="oe_stat_button" icon="fa-bars">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Assets</span>
                        </div>
                    </button>

                </xpath>
            </field>
        </record>
        
    </data>
</odoo>



