<odoo>
    <data>
        <record model="ir.ui.view" id="view_move_form_extended">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account_asset_management.view_move_form" />
            <field name="arch" type="xml">
                <button name="action_view_assets" position="before">
                    <button name="button_view_deferred_expenses" type="object" class="oe_stat_button" icon="fa-forward" attrs="{'invisible': [('deferred_expense_count', '=', 0)]}" groups="account.group_account_invoice">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="deferred_expense_count" />
                            </span>
                            <span class="o_stat_text">Accrual</span>
                        </div>
                    </button>
                </button>
                <button name="action_view_assets" position="replace">
                    <button name="action_view_assets" type="object" class="oe_stat_button" icon="fa-cube" attrs="{'invisible': [('asset_count', '=', 0)]}" groups="account.group_account_invoice">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="asset_count" />
                            </span>
                            <span class="o_stat_text">Asset(s)</span>
                        </div>
                    </button>
                </button>
                <field name="asset_profile_id" position="before">
                    <field name="deferred_expense_profile_id" optional="show" 
                    groups="account.group_account_invoice" 
                    domain="[('company_id','=', parent.company_id), ('rec_type', 'in', ['deferred_expense', 'deferred_income'] )]" />
                </field>
                <field name="asset_profile_id" position="replace">
                    <field name="asset_profile_id" attrs="{'column_invisible': [('parent.move_type', 'not in', ('in_invoice', 'in_refund'))]}" 
                    optional="show" groups="account.group_account_invoice" 
                    domain="[('company_id','=', parent.company_id), ('rec_type', '=', 'asset' )]" />
                </field>
            </field>
        </record>
