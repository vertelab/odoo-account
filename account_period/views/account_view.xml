    <record id="view_move_form" model="ir.ui.view">
      <field name="name">account.move.form.inherited.account_period</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form" />
      <field name="arch" type="xml">
         <xpath expr="//*[@id='header_right_group']//*[hasclass('o_td_label')]" position="before">
            <field name="period_id" />
         </xpath>
<!--
        <field name="ref" position="after">          
          <field name="payment_state"/>
        </field>
-->
		<field name="payment_reference" position="attributes">
			<attribute name="invisible">1</attribute>
		</field>
        <notebook position="inside">
			<page id="payment_done_tab" string="Payment" attrs="{'invisible': [('payment_state', '!=', 'paid')]}">
				<group id="payment_done_group" col="1">
						<field name="payment_period_id"/>
						<field name="payment_state"/>
						<field name="payment_date"/>
						<field name="payment_move_id"/>
						<field name="payment_reference"/>
				</group>
			</page>
        </notebook>
      </field>
    </record>
    <record id="view_move_tree" model="ir.ui.view">
      <field name="name">account.move.tree.account_period</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_tree" />
      <field name="arch" type="xml">
        <field name="date" position="before">
          <field name="period_id" />
        </field>
      </field>
    </record>
    <record id="view_bank_statement_tree" model="ir.ui.view">
