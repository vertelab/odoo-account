<odoo>
    <data>
        <record model="ir.ui.view" id="mis_budget_by_account_item_tree_view">
            <field name="name">mis.budget.by.account.item.tree (in mis_builder_budget)</field>
            <field name="model">mis.budget.by.account.item</field>
            <field name="inherit_id" ref="mis_builder_budget.mis_budget_by_account_item_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <field name="actual_amount" />
                    <button name="action_read_budget_by_account" type="object" string="View" class="float-end btn-secondary"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mis_budget_by_account_item_form_view">
            <field name="name">mis.budget.by.account.item.form (in mis_builder_budget)</field>
           <field name="model">mis.budget.by.account.item</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_account_item" type="object" class="oe_stat_button" icon="fa-list">
                                <field string="Account Items" name="account_move_line_count" widget="statinfo"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="name" />
                                <field name="budget_date_from"/>
                                <field name="budget_date_to"/>
                                <field name="account_id" />
                                <field name="date_range_id" />
                            </group>
                            <group>
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="debit" />
                                <field name="credit" />
                                 <field name="actual_amount" />
                                <field name="balance" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>