<odoo>
    <data>
        <record model="ir.ui.view" id="mis_budget_item_tree_view">
            <field name="name">mis.budget.item.tree (in mis_builder_budget)</field>
            <field name="model">mis.budget.item</field>
            <field name="inherit_id" ref="mis_builder_budget.mis_budget_item_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <button name="action_read_budget_by_kpi" type="object" string="View" class="float-end btn-secondary"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mis_budget_item_form_view">
            <field name="name">mis.budget.item.form (in mis_builder_budget)</field>
            <field name="model">mis.budget.item</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                 <field name="budget_id"/>
                                <field name="report_id"/>
                                <field name="budget_date_from"/>
                                <field name="budget_date_to"/>
                            </group>
                            <group>
                                <field name="kpi_expression_id" />
                                <field name="date_range_id" />
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="amount" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>