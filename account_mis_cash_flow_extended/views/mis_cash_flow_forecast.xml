<odoo>
    <record model="ir.ui.view" id="mis_budget_by_account_tree_view">
        <field name="name">mis_cash_flow_forecast.tree (in account_mis_cash_flow_extended)</field>
        <field name="model">mis.cash.flow.forecast</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date_from" />
                <field name="date_to" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="action_open_mis_cash_flow_forecast" model="ir.actions.act_window">
        <field name="name">Cash Flow Forecast</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.flow.forecast.wizard</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_cash_flow_forecast_wizard_form" />
        <field name="target">new</field>
    </record>

    <menuitem name="Cash Flow Forecast" id="" parent="mis_builder.mis_report_finance_menu"
        action="action_open_mis_cash_flow_forecast" />
</odoo>
